{
  "variables": {
    "disk_size": "10240",
    "memory": "4096",
    "iso_url": "https://releases.nixos.org/releases.nixos.org/nixos/20.03/nixos-20.03.1866.a7c70f2e10b/nixos-minimal-20.03.1866.a7c70f2e10b-x86_64-linux.iso",
    "iso_checksum": "c34bebfd77091416ab3001c61ff21d3410d644d59bad6e22ee45a72a125e7e77",
    "ssh_private_key_file": "./scripts/install_rsa",
    "ssh_username": "root",
    "version": "latest",
    "arch": "x86_64",
    "organization": "xtruder"
  },
  "builders": [
    {
      "boot_wait": "45s",
      "boot_command": [
        "sudo su --<enter>",
        "echo http://{{ .HTTPIP }}:{{ .HTTPPort}} > ~/.packer_http<enter>",
        "mkdir -m 0700 ~/.ssh<enter>",
        "curl $(cat ~/.packer_http)/install_rsa.pub > ~/.ssh/authorized_keys<enter>",
        "systemctl start sshd<enter>"
      ],
      "http_directory": "scripts",
      "iso_checksum_type": "sha256",
      "shutdown_command": "sudo shutdown -h now",
      "ssh_private_key_file": "{{ user `ssh_private_key_file` }}",
      "ssh_port": 22,
      "ssh_username": "{{ user `ssh_username` }}",
      "headless": true,
      "type": "virtualbox-iso",
      "iso_url": "{{ user `iso_url` }}",
      "iso_checksum": "{{ user `iso_checksum` }}",
      "guest_additions_mode": "disable",
      "format": "ova",
      "guest_os_type": "Linux_64",
      "disk_size": "{{ user `disk_size` }}",
      "vboxmanage": [
        [
          "modifyvm",
          "{{.Name}}",
          "--memory",
          "{{ user `memory` }}",
          "--vram",
          "128",
          "--clipboard",
          "bidirectional"
        ]
      ]
    },
    {
      "boot_wait": "45s",
      "boot_command": [
        "sudo su --<enter>",
        "echo http://{{ .HTTPIP }}:{{ .HTTPPort}} > ~/.packer_http<enter>",
        "mkdir -m 0700 ~/.ssh<enter>",
        "curl $(cat ~/.packer_http)/install_rsa.pub > ~/.ssh/authorized_keys<enter>",
        "systemctl start sshd<enter>"
      ],
      "http_directory": "scripts",
      "iso_checksum_type": "sha256",
      "shutdown_command": "sudo shutdown -h now",
      "ssh_private_key_file": "{{ user `ssh_private_key_file` }}",
      "ssh_port": 22,
      "ssh_username": "{{ user `ssh_username` }}",
      "headless": true,
      "type": "qemu",
      "iso_url": "{{ user `iso_url` }}",
      "iso_checksum": "{{ user `iso_checksum` }}",
      "disk_interface": "virtio",
      "disk_size": "{{ user `disk_size` }}",
      "format": "qcow2",
      "memory": "{{ user `memory` }}"
    },
    {
      "boot_wait": "60s",
      "boot_command": [
        "sudo su --<enter>",
        "echo http://{{ .HTTPIP }}:{{ .HTTPPort}} > ~/.packer_http<enter>",
        "mkdir -m 0700 ~/.ssh<enter>",
        "curl $(cat ~/.packer_http)/install_rsa.pub > ~/.ssh/authorized_keys<enter>",
        "nix-env -iA nixos.linuxPackages.hyperv-daemons<enter><wait10>",
        "$(find /nix/store -executable -iname 'hv_kvp_daemon' | head -n 1)<enter><wait10>",
        "systemctl start sshd<enter>"
      ],
      "http_directory": "scripts",
      "iso_checksum_type": "sha256",
      "shutdown_command": "sudo shutdown -h now",
      "ssh_private_key_file": "{{ user `ssh_private_key_file` }}",
      "ssh_port": 22,
      "ssh_username": "{{ user `ssh_username` }}",
      "headless": true,
      "type": "hyperv-iso",
      "generation": 1,
      "iso_url": "{{ user `iso_url` }}",
      "iso_checksum": "{{ user `iso_checksum` }}",
      "memory": "{{ user `memory` }}",
      "disk_size": "{{ user `disk_size` }}",
      "enable_secure_boot": false,
      "switch_name": "Default Switch",
      "differencing_disk": true,
      "communicator": "ssh",
      "ssh_timeout": "1h"
    },
    {
      "boot_wait": "45s",
      "boot_command": [
        "sudo su --<enter>",
        "echo http://{{ .HTTPIP }}:{{ .HTTPPort}} > ~/.packer_http<enter>",
        "mkdir -m 0700 ~/.ssh<enter>",
        "curl $(cat ~/.packer_http)/install_rsa.pub > ~/.ssh/authorized_keys<enter>",
        "systemctl start sshd<enter>"
      ],
      "http_directory": "scripts",
      "iso_checksum_type": "sha256",
      "shutdown_command": "sudo shutdown -h now",
      "ssh_private_key_file": "{{ user `ssh_private_key_file` }}",
      "ssh_port": 22,
      "ssh_username": "{{ user `ssh_username` }}",
      "headless": true,
      "type": "vmware-iso",
      "iso_url": "{{ user `iso_url` }}",
      "iso_checksum": "{{ user `iso_checksum` }}",
      "memory": "{{ user `memory` }}",
      "disk_size": "{{ user `disk_size` }}",
      "guest_os_type": "Linux"
    }
  ],
  "provisioners": [
    {
      "type": "shell-local",
      "script": "./scripts/build-local.sh",
      "override": {
        "qemu": {
          "environment_vars": [
            "image=vagrant-qemu",
            "target=nixos-{{ user `version` }}-libvirt-{{ user `arch` }}"
          ]
        },
        "virtualbox-iso": {
          "environment_vars": [
            "image=vagrant-libvirt",
            "target=nixos-{{ user `version` }}-virtualbox-{{ user `arch` }}"
          ]
        }
      }
    },
    {
      "type": "shell",
      "script": "./scripts/prepare.sh",
      "environment_vars": ["disk=/dev/sda"],
      "override": {
        "qemu": {
          "environment_vars": ["disk=/dev/vda"]
        }
      }
    },
    {
      "type": "file",
      "destination": "/nixos.closure",
      "generated": true,
      "override": {
        "qemu": {
          "source": "./build/nixos-{{ user `version` }}-libvirt-{{ user `arch` }}.closure"
        },
        "virtualbox-iso": {
          "source": "./build/nixos-{{ user `version` }}-virtualbox-{{ user `arch` }}.closure"
        }
      }
    },
    {
      "type": "file",
      "destination": "/nixos.link",
      "generated": true,
      "override": {
        "qemu": {
          "source": "./build/nixos-{{ user `version` }}-libvirt-{{ user `arch` }}.link"
        },
        "virtualbox-iso": {
          "source": "./build/nixos-{{ user `version` }}-virtualbox-{{ user `arch` }}.link"
        }
      }
    },
    {
      "type": "shell",
      "script": "./scripts/install.sh"
    }
  ],
  "post-processors": [
    [
      {
        "type": "vagrant",
        "keep_input_artifact": false,
        "only": [
          "virtualbox-iso",
          "qemu",
          "hyperv-iso"
        ],
        "output": "./build/nix-profiles-nixos-{{ user `version` }}-{{.Provider}}-{{ user `arch` }}.box"
      },
      {
        "type": "vagrant-cloud",
        "box_tag": "{{ user `organization` }}/nix-profiles-nixos-{{ user `arch` }}",
        "access_token": "{{user `cloud_token`}}",
        "version": "{{user `version`}}"
      }
    ]
  ]
}
